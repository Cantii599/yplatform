#!/usr/bin/env bash
set -euo pipefail

function on_exit() {
    local STATUS=$?
    set +x
    exit ${STATUS}
}

trap on_exit EXIT

SUPPORT_FIRECLOUD_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/../.." && pwd)"

${SUPPORT_FIRECLOUD_DIR}/ci/darwin/bootstrap

brew install \
    erlang \
    graphviz \
    nodejs

# NPM
npm install --global npm
npm install --global json
