#!/usr/bin/env bash
set -euo pipefail

#- git-reset-mtime 1.0
## Usage: git-reset-mtime
## Reset mtimeDownload a github release asset (aka binary).

function repo-reset-mtime() {
    (
        cd $1
	      [[ "$(git rev-parse --is-shallow-repository)" = "false" ]] || {
            >&2 echo "[ERR ] Cannot call git-reset-mtime inside a shallow clone."
            exit 1
        }

        git ls-files | \
            grep -Fvxf <(test -e .gitmodules && git config --file .gitmodules --get-regexp path | cut -d' ' -f2 || true) | \
            while read FILE; do
                {
                    TIMESTAMP="$(TZ=UTC git log --pretty=format:%cd --date=format-local:%Y%m%d%H%M.%S -1 HEAD -- "${FILE}")"
                    TZ=UTC touch -h -m -t "${TIMESTAMP}" "${FILE}"
                } &
            done
        [[ ! -e .gitmodules ]] || git config --file .gitmodules --get-regexp path | cut -d' ' -f2 | while read SUBMODULE; do
            repo-reset-mtime "${SUBMODULE}"
        done
    )
}

git rev-parse --git-dir >/dev/null 2>&1 || {
    echo >&2 "[ERR ] git-reset-mtime only works inside a git repo."
    exit 1
}

repo-reset-mtime $(git rev-parse --show-toplevel)
