#!/usr/bin/env bash
set -euo pipefail

[[ "${INPUT_XTRACE}" != "true" ]] || set -x

YP_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." >/dev/null && pwd)"

# FIXME https://github.com/actions/runner/issues/863
echo ::group::${HOME}
source "${YP_DIR}/ci/util/home.inc.sh"
echo ::endgroup::

# FIXME https://github.com/actions/runner/issues/716
[[ -d "${GITHUB_ACTION_PATH}" ]] || \
    GITHUB_ACTION_PATH=/__w/_actions/${GITHUB_ACTION_PATH#/home/runner/work/_actions/}

# ------------------------------------------------------------------------------

>&2 echo "$(date +"%H:%M:%S") [INFO] Printing debug info..."
echo ::group::github event
cat "${GITHUB_EVENT_PATH}"
echo
echo ::endgroup::

echo ::group::printenv
printenv
echo ::endgroup::

echo ::group::pwd
pwd
ls -la
echo ::endgroup::

echo ::group::${GITHUB_ACTION_PATH}
(
    cd "${GITHUB_ACTION_PATH}"
    pwd
    ls -la
)
echo ::endgroup::

echo ::group::${YP_DIR}
(
    cd "${YP_DIR}"
    pwd
    ls -la
)
echo ::endgroup::
