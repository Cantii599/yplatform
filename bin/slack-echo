#!/usr/bin/env bash
(set -o igncr) 2>/dev/null && set -o igncr; # Magic to make it work under cygwin

#- slack-echo 1.0
## Usage: slack-echo [OPTION]... TEXT...
## Echo message via a Slack webhook.
##
##   -f, --from     Text to display as sender           Defaults to $(whoami)@$(hostname)
##   -i, --icon     Emoji to display as sender's icon   Defaults to ":thought_balloon:"
##   -t, --to       Recipient as #channel or @username  Defaults to "#cloud"
##   -w, --webhook  Webhook URL                         Defaults to ${CLOUD_SLACK_WEBHOOK}
##
##   -h, --help     Display this help and exit
##   -v, --version  Output version information and exit

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
TOP="$(cd ${DIR}/../.. && pwd)"
source ${TOP}/support/sh/common.inc.sh

TMP_FILE=$(mktemp -t firecloud.XXXXXXXXXX)
function on_exit() {
    rm -rf ${TMP_FILE}
}
trap on_exit EXIT

FROM="$(whoami)@$(hostname)"
ICON="${ICON:-:thought_balloon:}"
TO="${TO:-#cloud}"
WEBHOOK="${CLOUD_SLACK_WEBHOOK}"

while [[ $# -gt 0 ]]; do
    case "$1" in
        -f|--from)
            FROM="$2"
            shift 2
            ;;
        -i|--icon)
            ICON="$2"
            shift 2
            ;;
        -t|--to)
            TO="$2"
            shift 2
            ;;
        -w|--webhook)
            WEBHOOK="$2"
            shift 2
            ;;
        -h|--help)
            sh_script_usage
            ;;
        -v|--version)
            sh_script_version
            ;;
        -* )
            sh_script_usage
            ;;
        *)
            break
            ;;
    esac
done

TEXT="$*"

cat > ${TMP_FILE} <<EOF
{
"username": "${FROM}",
"channel": "${TO}",
"icon_emoji": "${ICON}",
"text": "${TEXT}"
}
EOF

cat ${TMP_FILE}

curl -fqsS \
     -X POST \
     -H "Content-type: application/json" \
     --data @${TMP_FILE} \
     ${WEBHOOK}
