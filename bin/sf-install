#!/usr/bin/env bash
set -euo pipefail

SUPPORT_FIRECLOUD_DIR=support-firecloud

git submodule add --force -b master git://github.com/ysoftwareab/yplatform.git ${SUPPORT_FIRECLOUD_DIR}
git submodule sync --recursive
git submodule update --init --recursive
(
    cd ${SUPPORT_FIRECLOUD_DIR}
    # checkout latest version
    git checkout $(git tag --list --sort=version:refname "v*" | tail -n1)
)
