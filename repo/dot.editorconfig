root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 120

[*.mk]
indent_style = tab
tab_width = 4

[*.sh]
tab_width = 4

[.gitmodules]
indent_style = none

[.npmignore]
insert_final_newline = false # remove if .npmignore isn't empty

[Makefile]
indent_style = tab
tab_width = 4

[repo/dot.vscode/settings.json]
max_line_length = 1024
