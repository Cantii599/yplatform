root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
max_line_length = none
trim_trailing_whitespace = false

[*.mk]
indent_style = tab
tab_width = 4

[*.sh]
indent_size = 4

[.gitmodules]
indent_style = none

[Makefile]
indent_style = tab
tab_width = 4
